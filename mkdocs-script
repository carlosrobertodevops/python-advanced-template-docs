#!/bin/bash
# This is an example script
# Carregar vari√°veis do .env
export $(grep -v '^#' .env | xargs)

# Prepare
git clone "https://github.com/carlosrobertodevops/python-advanced-template-docs.git"
cd repo

Install @techdocs/cli, mkdocs and mkdocs plugins
npm install -g @techdocs/cli
pip install "mkdocs-techdocs-core==1.*"

# Generate
techdocs-cli generate --no-docker


TECHDOCS_BUCKET="carlosrobertodevops-backstage-techdocs-bucket"

ENTITY_NAMESPACE="default"
ENTITY_KIND="Component"
ENTITY_NAME="python-advanced-template-docs"

# Publish
techdocs-cli publish --publisher-type awsS3 --storage-name $TECHDOCS_BUCKET --entity $ENTITY_NAMESPACE/$ENTITY_KIND/$ENTITY_NAME

rm -rf "./python-advanced-template-docs"